{
  "manifest_version": 3,
  "name": "DiscoDig",
  "description": "Dig your Discord data out with the DiscoDig data collector!",
  "version": "1.0",
  "icons": {
    "128": "imgs/logo.jpg"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": [
        "libs/plotly.js",  "libs/wordcloud2.js", "content.js"
      ],
      "matches": [
        "https://*.discord.com/*",
        "https://*.discord.com/channels/@me/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["libs/plotly.js", "libs/wordcloud2.js", "imgs/bulldozer.gif", "imgs/shovel.png"],
    "matches": ["<all_urls>"]
  }]
  
}